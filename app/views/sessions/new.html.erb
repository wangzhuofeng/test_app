<h1>Log in:</h1>
<div class="row">
  <div class="col-sm-12">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      
      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 control-label"  %>
        <div class="col-sm-6">
          <%= f.email_field :email, class: "form-control", placeholder: "Your email", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "col-sm-2 control-label"  %>
        <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control", placeholder: "Your password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit("Login", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    <% end %>
    <div class="col-sm-offset-2 col-sm-4">
      <%= link_to "Cancel & Back to Home", root_path %>
    </div>
    
  </div>
</div>